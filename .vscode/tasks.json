{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",  // Ensure using clang++ for C++ code
            "args": [
                "-std=c++17",  // Use C++17 standard
                "-stdlib=libc++",  // Ensure linking with libc++ (Clang's C++ standard library)
                "-g",  // Debug symbols
                "${file}",  // The active file
                "-o",  // Output file
                "${fileDirname}/${fileBasenameNoExtension}",  // Output path (same name as the source file)
                "-I",
                "/usr/local/include/eigen3/Eigen"
            ],
            "options": {
                "cwd": "${fileDirname}"  // Set working directory as the file directory
            },
            "problemMatcher": [
                "$gcc"  // Use the GCC problem matcher to catch errors
            ],
            "group": {
                "kind": "build",
                "isDefault": true  // Set this as the default build task
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
